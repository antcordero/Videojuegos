    /* Estilos generales */
    body {
      font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
    }

    .hero {
      background: linear-gradient(120deg, #1e3c72 0%, #2a5298 100%);
      color: #fff;
      text-align: center;
      padding: 60px 20px 50px 20px;
      border-radius: 12px;
      margin: 40px auto 0 auto;
      max-width: 700px;
      box-shadow: 0 8px 24px rgba(30,60,114,0.15);
    
      h1 {
        font-size: 2.5em;
        margin-bottom: 18px;
        font-weight: 700;
        letter-spacing: 1px;
      }

      p {
        font-size: 1.25em;
        margin-bottom: 32px;
        font-weight: 400;
      }
    }

    .hero-buttons {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
    }
    .btn {
      display: inline-block;
      padding: 14px 32px;
      background: var(--primary-background-color);
      color: #1e3c72;
      border: none;
      border-radius: 6px;
      font-size: 1.1em;
      font-weight: 600;
      text-decoration: none;
      transition: background 0.2s, color 0.2s, box-shadow 0.2s;
      box-shadow: 0 2px 8px rgba(30,60,114,0.10);
      cursor: pointer;
    
      &:hover, .btn:focus {
        background: var(--primary-background-hover);
        color: #fff;
      }
    }
    
    .btn-secondary {
      background: #fff;
      color: #2a5298;
      border: 2px solid #ffb347;
    }

    .btn-secondary:hover, .btn-secondary:focus {
      background: #ffb347;
      color: #fff;
    }

    @media (max-width: 600px) {
      .hero {
        padding: 32px 8px 28px 8px;
      }
      .hero h1 {
        font-size: 1.5em;
      }
      .hero p {
        font-size: 1em;
      }
      .btn, .btn-secondary {
        padding: 10px 18px;
        font-size: 1em;
      }
    }

    .footer {
      background: var(--secondary-background, #607d8b);
      color: #fff;
      text-align: center;
      padding: 24px 12px 20px 12px;
      font-size: 1em;
      margin-top: 48px;
      border-radius: 0 0 12px 12px;
      box-shadow: 0 -2px 12px rgba(30,60,114,0.07);
    }
    .footer a {
      color: #ffb347;
      text-decoration: underline;
      transition: color 0.2s;
    }
    .footer a:hover, .footer a:focus {
      color: #fff;
      text-decoration: none;
    }
    @media (max-width: 600px) {
      .footer {
        font-size: 0.95em;
        padding: 16px 4px 14px 4px;
      }
    }

    /* Componente menu horizontal */

nav#mainmenu {
    
  --logo-width : 64px;

  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: var(--secondary-background);
  position:relative;

  img.logo{
      width: var(--logo-width);
  }   

  >a{
      position:absolute;
      left:calc( 50% - calc( var(--logo-width) /2) );   
  }

  ul{
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      list-style: none;
      padding: 0;
      margin:0;

      li{
          transition: 1s;
          margin:0;
          padding:2rem;
          
          a { 
              text-decoration: none;
              color:var(--primary-color);
          }

          &:hover{
              background-color: var(--primary-background);
              color:var(--secondary-background-hover);
          }
      }
  }
}
    
  </style>

